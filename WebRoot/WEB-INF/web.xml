<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee   http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
 <filter>
  <filter-name>EncodeFilter</filter-name>
  <filter-class>com.cuc.filter.EncodeFilter</filter-class>
 </filter>
 <filter-mapping>
  <filter-name>EncodeFilter</filter-name>
  <url-pattern>/*</url-pattern>
 </filter-mapping>
 <servlet>
  <servlet-name>UserValid</servlet-name>
  <servlet-class>com.cuc.action.UserValid</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>AdminServlet</servlet-name>
  <servlet-class>com.cuc.action.AdminServlet</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>CustomerServlet</servlet-name>
  <servlet-class>com.cuc.action.CustomerServlet</servlet-class>
 </servlet>
 <servlet>
  <servlet-name>HouseServlet</servlet-name>
  <servlet-class>com.cuc.action.HouseServlet</servlet-class>
 </servlet>
 <servlet-mapping>
  <servlet-name>AdminServlet</servlet-name>
  <url-pattern>/servlet/AdminServlet</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>UserValid</servlet-name>
  <url-pattern>/servlet/UserValid</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>CustomerServlet</servlet-name>
  <url-pattern>/servlet/CustomerServlet</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>HouseServlet</servlet-name>
  <url-pattern>/servlet/HouseServlet</url-pattern>
 </servlet-mapping>
 <welcome-file-list>
  <welcome-file>index.jsp</welcome-file>
 </welcome-file-list>
 <login-config>
  <auth-method>BASIC</auth-method>
 </login-config>
</web-app>
